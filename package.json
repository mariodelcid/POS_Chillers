{
  "name": "chillers-pos",
  "version": "1.0.0",
  "private": true,
  "description": "POS station with inventory tracking and sales, ready for Railway deployment",
  "type": "module",
  "engines": { "node": ">=18.18" },
  "scripts": {
    "dev:server": "nodemon server/index.js",
    "dev:client": "vite",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "build": "npx prisma generate && vite build",
    "start": "node start.js",
    "postinstall": "npx prisma generate",
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^5.16.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "prisma": "^5.16.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "vite": "^5.4.1"
  }
}


